<%- include("partials/header.ejs") -%>
  <section class="header">
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"><img class="img-brand" src="img/logo_brand.png"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="item-link" href="#"> Áo</a>
            </li>
            <li class="nav-item">
              <a class="item-link" href="#"> Quần</a>
            </li>
            <li class="nav-item">
              <a class="item-link" href="#"> Giày</a>
            </li>
            <li class="nav-item">
              <a class="item-link" href="#"> Phụ kiện</a>
            </li>
          </ul>

          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn-search" type="submit">Search</button>
          </form>

          <div class="d-flex">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="item-link" href="#" data-bs-toggle="modal" data-bs-target="#loginform"> Đăng nhập</a>
              </li>
              <li class="nav-item">
                <a class="item-link" href="#"> <i class="fa-solid fa-cart-shopping"></i> </a>
              </li>
            </ul>
          </div>

        </div>
      </div>
    </nav>

    <div class="modal" tabindex="-1" id="loginform">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">ĐĂNG NHẬP</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="d-flex justify-content-center">
              <img src="img/logo_brand.png" class="img-brand">
            </div>
            <br>

            <div>
              <form action="">
                <div class="mb-3 row">
                  <label for="inputUername" class="col-sm-2 col-form-label">Username:</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUername">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Password:</label>
                  <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword">
                  </div>
                </div>

                <div>
                  Bạn chưa có tài khoản? <a href="#"> Đăng ký ngay! </a>
                </div>
                <br>

                <div class="d-flex justify-content-center" >
                  <input type="submit" name="signin" value="ĐĂNG NHẬP" class="btn-signin" >
                </div>
              </form>
            </div>

            
          </div>
          
        </div>
      </div>
    </div>
  </section>


  <%- include("partials/footer.ejs") -%>