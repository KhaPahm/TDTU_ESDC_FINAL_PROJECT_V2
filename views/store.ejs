<script>
    load_data()
    function load_data() {
        $.ajax({
            url: "/store",
            method: "POST",
            dataType: "JSON",
            success: function (data) {
                var html = '';

                if (data.data.length > 0) {
                    for (var count = 0; count < data.data.length; count++) {
                        html += "<div class='col-lg-4 col-md-6 col-sm-12' id='" + data.data[count].ProductID + "''>" +
                            "<div class='product-container'>" +
                            "<a href='/product-detail?id="+data.data[count].ProductID+"'><img class='product-img' src='" + data.data[count].Path + "' alt=''></a>" +
                            "<a class='product-titel' href='/product-detail?id="+data.data[count].ProductID+"'><div class='product-titel'>" + data.data[count].Name + "</div></a>" +
                            "<div class='product-price'>" + data.data[count].Price + " VND</div>" +
                            "</div>" +
                            "</div>";
                    }
                }
                $('#product-list').html(html);
            }
        });
    }
</script>